---
interface Props {
  title: string;
  description: string;
  owner: string;
  code: string;
  category?: string;
}

const { title, description, owner, code, category } = Astro.props;
---

<a href={`${import.meta.env.BASE_URL}apps/${code}`}>
  <article>
    <div class="panel-heading">
      <h4>{title}</h4>
    </div>
    <div class="panel-body">
      <p>
        {description}
      </p>
      <span><b>Owner:</b> {owner}</span>
      {
        category && (
          <span>
            <b>Category:</b> {category}
          </span>
        )
      }
    </div>
  </article>
</a>

<style>
  a {
    display: block;
    flex: 1 1 400px;
  }

  article {
    padding: none;
    background-color: #cfccc0;
    color: #1e1e1e;
    border: 1px solid #528329;
    border-radius: 0.5rem;
    margin-bottom: 1rem;

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: #1e1e1e;
    }
  }

  .panel-heading {
    margin: none;
    background-color: #d6c8a0;

    h4 {
      text-decoration: underline;
      text-decoration-color: #528329;
      text-decoration-thickness: 2px;
    }
  }
</style>
